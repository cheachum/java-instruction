package ui;

import util.Console;

public class WizardInventoryApp {

	public static void main(String[] args) {
		System.out.println("Welcome to the Wizard Inventory App");
		String command = "";
		while (!command.equalsIgnoreCase("exit")) {
			command = Console.getString(getDisplayMenu());
			if (command.equalsIgnoreCase("show"));
			switch (command.toLowerCase()) {
			case "show": 
				//list items
				break;
			case "grab": 
				//add an item
				break;
			case "edit": 
				//edit an item
				break; 
			case "drop":
				//delete an item
				break;
			case "exit": 
				//exit the app
				break;
				default: 
					System.out.println("Invalid command. Try again.");
			}
			
		}
		
		
		System.out.println("bye!");

	}
	
	private static String getDisplayMenu() {
		String menu = "COMMAND MENU\n" + "show - Show all items\n" + "grab - Grab an item\n" + "edit - Edit an item\n" + "drop - Drop an item" + "exit - Exit program\n" + 
				" \r\n" + 
				"Command:";
		
		return menu; 
	}

}
